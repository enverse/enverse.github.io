---
  import Logo from "/static/assets/image/logo.png";


  const links =  [
    { to: `/#about`, title: "About" },
    { to: `/#testimonials`, title: "Testimonials" },
    { to: `/#blog`, title: "Blog" },
    { to: `/#contact`, title: "Contact", highlight: true }
  ] 
  
---


<header
  class="navbar__desktop-menu mdl-layout__header mdl-layout__header--transparent"
>
      <!-- Title -->
  <div class="mdl-layout__header-row">
    <span class="mdl-layout-title"><a href='/'><img alt="enverse-logo" src={Logo} width="164" height="27" /></a></span>
    <!-- Add spacer, to align navigation to the right -->
    <div class="mdl-layout-spacer"></div>
    <!-- Navigation -->
    <nav class="mdl-navigation navbar__links-container mdl-layout--large-screen-only">
      {links && links.map(({ to, title, highlight }) => <a href={to} class={ highlight && 'navbar__links-container--highlight'}>{title}</a>)}
      <!-- <a href={links['about']}>About Us</a>
      <a href={links['testimonials']}>Testimonials</a>
      <a href={links['blog']}>Blog</a>
      <a href={links['contact']}>Contact</a> -->
    </nav>
  </div>
</header>
<div class="mdl-layout__drawer">

  <nav class="mdl-navigation">
    {links && links.map(({ to, title }) => <a href={to}>{title}</a>)}
  </nav>
</div>

<style>
  .navbar__desktop-menu {
    position: absolute;
    background-color: transparent;
    width: 80%;
    margin: auto;
    right: 0;
    left: 0;
    top: 20px;
  }

  .navbar__desktop-menu--vertical-center {
    top: 35px;
  }

  .navbar__links-container {
    width: 40%;
    display: flex;
    justify-content: space-between;
  }

  .navbar__content {
    position: absolute;
    display: flex;
    width: 80%;
    margin: auto;
    justify-content: space-between;
    padding-top: 47px;
  }
  .mdl-layout__header-row {
    padding: 0;
  }

  .navbar__menu-items-container {
    font-size: 1.1rem;
    font-weight: 700;
    width: 40%;
    display: flex;
    justify-content: space-between;
  }

  .navbar__menu-items-container a {
    padding: 10px;
  }

  img {
    height: 24px;
  }
  a:link,
  a:visited {
    text-decoration: inherit;
    color: inherit;
    font-family: "Exodus Sans Bold";
    font-size: 16px;
  }
  .navbar__links-container--highlight {
    border: 2px solid var(--color-green-lightest);
    border-radius: 5px;
    padding: 7px;
  }

  @media (max-width: 480px) {
    .navbar__desktop-menu--vertical-center {
      top: 20px;
    }
  }

</style>
