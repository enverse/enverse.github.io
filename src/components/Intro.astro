---
import HeretiqueLogo from "/assets/image/heretique-logo.png";
import SociousLogo from "/assets/image/socious-logo.png";
import UnopsLogo from "/assets/image/unops-logo.svg";
---

<section id="intro" class="intro-background">
  <div class="intro__content">
    <h1>Eco-Conceived Software for Impact</h1>
    <div class="intro__client-logos-container">
      <img src={HeretiqueLogo} />
      <img src={SociousLogo} />
      <img src={UnopsLogo} />
    </div>
  </div>

  <a href="#about" class="intro__scroll-icons-container">
    scroll
    <span class="material-icons-outlined"> mouse </span>
    <span class="material-icons-outlined"> south </span>
  </a>
</section>

<style>
  .intro-background {
    background-image: url("/assets/image/home-background.jpg");
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  .intro__content {
    width: 80%;
    margin: auto;
    height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  a:link,
  a:visited {
    text-decoration: inherit;
  }

  .intro__client-logos-container img {
    height: 26px;
    width: auto;
    margin-right: 15px;
  }

  .intro__client-logos-container {
    margin-top: 25px;
  }

  h1 {
    font-size: 5.3125em;
    margin: 0;
    width: 619px;
    color: white;
    font-family: "Exodus Sans Bold";
  }

  section {
    padding: 100px 0;
  }

  .intro__scroll-icons-container {
    display: flex;
    justify-content: flex-end;
    width: 80%;
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 3.1em;
      width: 95%;
    }
    .intro__client-logos-container img {
      height: 20px;
      margin-right: 5px;
    }
  }
</style>
