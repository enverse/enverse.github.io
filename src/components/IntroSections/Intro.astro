---
import HeretiqueLogo from "/static/assets/image/heretique-logo.png";
import SociousLogo from "/static/assets/image/socious-logo.png";
import UnopsLogo from "/static/assets/image/unops-logo.svg";
---

<section id="intro" class="intro-background">
  <div class="intro__content">
    <h1>
      The Green Software Studio.
      <!-- <div class="intro-background__intro-content--underlined">Code done
        right</div> -->
    </h1>
    <div class="intro__client-logos-container">
      <a href="https://www.heretique.fr/" target="_blank">
        <img alt="HeretiqueLogo" width="86" height="26" src={HeretiqueLogo} />
      </a>
      <a href="https://www.socious.io/" target="_blank">
        <img alt="SociousLogo" width="19" height="26" src={SociousLogo} />
      </a>
      <a href="https://www.unops.org/" target="_blank">
        <img alt="UnopsLogo" width="177" height="26" src={UnopsLogo} />
      </a>
    </div>
  </div>

  <a href="#about" class="intro__scroll-icons-container">
    scroll
    <i class="icon-mouse"></i>
    <i class="icon-south" />
  </a>
</section>

<style>
  .intro-background {
    background-image: url("/static/assets/image/home-background.webp");
    display: flex;
    align-items: center;
    flex-direction: column;
    background-size: cover;
  }

  .intro__content {
    width: 80%;
    margin: auto;
    height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .intro-background__intro-content--underlined {
    border-bottom: 4px solid;
    font-size: 2.5rem
  }

  a:link,
  a:visited {
    text-decoration: inherit;
  }

  .intro__client-logos-container img {
    height: 26px;
    width: auto;
    margin-right: 15px;
  }

  .intro__client-logos-container {
    margin-top: 45px;
  }

  h1 {
    font-size: 3.5em;
    margin: 0;
    width: 768px;
    color: white;
    font-family: "Exodus Sans Bold";
  }

  section {
    padding: 100px 0;
  }

  .intro__scroll-icons-container {
    display: flex;
    justify-content: flex-end;
    width: 80%;
    color: white;
    font-size: 1em
  }

  .intro__scroll-icons-container i:first-child {
    margin-left: 5px;
  }

  @media (max-width: 600px) {
    h1 {
      font-size: 3.1em;
      width: 95%;
    }

    .intro__client-logos-container img {
      height: 20px;
      margin-right: 5px;
    }
  }
</style>